{
  "name": "news",
  "version": "1.0.0",
  "description": "news list",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.ts",
    "server": "nodemon server.ts",
    "build": "rimraf dist && tsc",
    "add-build": "git add dist",
    "ts.check": "tsc --project tsconfig.json",
    "build:client": "cd .. && cd client && npm run build",
    "typeorm": "typeorm-ts-node-commonjs",
    "seed:run": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./data-source.ts",
    "migrations:run": "npm run typeorm migration:run -- -d ./data-source.ts",
    "migrations:create": "npm run typeorm migration:create -d ./data-source.ts",
    "migrations:revert": "npm run typeorm migration:revert -d ./data-source.ts",
    "migrations:generate": "npm run typeorm migration:generate -- -d data-source.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Yaroslav Prystupliuk",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "fastest-validator": "^1.17.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.0",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/passport": "^1.0.16",
    "@types/passport-http-bearer": "^1.0.41",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
