{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6"
		],
		"target": "es6",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
	},
	"include": ["./**/*"]
}